{
  "version": 2,
  "builds": [
    {
      "src": "index.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/chat.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/chat",
      "dest": "/api/chat.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "api/chat.js": {
      "runtime": "nodejs18.x"
    }
  },
  "env": {
    "GROQ_API_KEY": "your_groq_api_key_here",
    "GEMINI_API_KEY": "your_gemini_api_key_here"
  }
}
